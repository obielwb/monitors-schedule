{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2022",
    "esModuleInterop": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "@controllers": ["src/controllers"],
      "@entities": ["src/entities"],
      "@repositories": ["src/repositories"],
      "@routes": ["src/routes"]
    }
  },
  "include": ["./src"]
}
